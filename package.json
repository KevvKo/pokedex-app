{
  "name": "pokedex-app",
  "displayName": "Cordova Pokedex",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "ng": "ng",
    "cordova": "cordova",
    "start": "ng serve",
    "start:browser": "run-s build cordova:run:browser",
    "build": "ng build",
    "build:watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "cordova:run:browser": "cordova run browser",
    "cordova:clear": "rimraf www platforms && mkdir www",
    "cordova:add-platforms": "cordova platform add browser ios android",
    "postinstall": "run-s cordova:clear cordova:add-platforms"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0",
    "@angular/common": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/router": "^15.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.0",
    "@angular/cli": "~15.0.2",
    "@angular/compiler-cli": "^15.0.0",
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.2.4",
    "autoprefixer": "^10.4.13",
    "cordova": "^11.0.0",
    "cordova-android": "^10.1.2",
    "cordova-browser": "^6.0.0",
    "cordova-ios": "^6.2.0",
    "cordova-plugin-camera": "^6.0.0",
    "cordova-plugin-file": "^7.0.0",
    "cordova-plugin-screen-orientation": "^3.0.2",
    "es6-promise-plugin": "^4.2.2",
    "jest": "^28.1.3",
    "jest-preset-angular": "^12.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4",
    "typescript": "~4.8.2"
  },
  "cordova": {
    "platforms": [
      "ios",
      "browser",
      "android"
    ],
    "plugins": {
      "cordova-plugin-device": {},
      "cordova-plugin-camera": {
        "ANDROIDX_CORE_VERSION": "1.6.+"
      },
      "cordova-plugin-file": {
        "ANDROIDX_WEBKIT_VERSION": "1.4.0"
      },
      "cordova-plugin-screen-orientation": {}
    }
  }
}
